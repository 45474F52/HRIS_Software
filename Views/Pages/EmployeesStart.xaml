<UserControl x:Class="HRIS_Software.Views.Pages.EmployeesStart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HRIS_Software.ViewModels.PagesVMs"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type vm:EmployessStartVM}}"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Сотрудники"
                    Width="200"
                    Height="120"
                    FontSize="22"
                    Cursor="Hand"
                    Command="{Binding GoToEmployees}" />
            <Button Content="Вакансии"
                    Width="200"
                    Height="120"
                    FontSize="22"
                    Cursor="Hand"
                    Command="{Binding GoToVacancies}" />
        </StackPanel>
    </Grid>
</UserControl>